    "keywords": ["markdown","parser","markua"],
    "homepage": "https://github.com/thephpleague/markua",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Davey Shafik",
            "email": "me@daveyshafik.com",
            "homepage": "http://daveyshafik.com",
            "role": "Lead Developer"
        }
